" Leader key
let mapleader = ","
let maplocalleader = " "

" Plugins
set surround
set multiple-cursors
set commentary
set argtextobj
set textobj-entire
set ReplaceWithRegister
set highlightedyank

let g:argtextobj_pairs="[:],(:),<:>"

set showmode
set so=5
set incsearch
set nu
set ignorecase
set smartcase
set hlsearch
set wrapscan
set notimeout
set relativenumber
set number
set wrapscan

set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

" Mappings
inoremap jk <Esc>
imap jk <Esc>

" Window management
nnoremap <leader>ww <C-w>w
nnoremap <leader>wd <C-w>q
nnoremap <leader>w- :split<CR>
nnoremap <leader>w| :vsplit<CR>
nnoremap <leader>- :split<CR>
nnoremap <leader>| :vsplit<CR>
nnoremap <leader>wm :wincmd _<Bar>:wincmd \|<Bar>:wincmd =<CR>
