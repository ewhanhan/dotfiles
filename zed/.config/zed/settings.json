{
  "language_models": {
    "openai": {
            "version": "1"
        }
  },
  "tabs": {
    // Show git status colors in the editor tabs.
    "git_status": true,
    "close_position": "left",
    // Whether to show the file icon for a tab.
    "file_icons": true
  },
  "theme": "Ayu Mirage",
  "soft_wrap": "preferred_line_length",
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4"
    },
    "version": "2",
    "button": false,
    "provider": null
  },
  "outline_panel": {
    // "button": false
  },
  "autosave": "on_focus_change",

  "tab_bar": {
    // Whether or not to show the navigation history buttons.
    "show_nav_history_buttons": false
  },
  "toolbar": {
    // Whether to show quick action buttons.
    "quick_actions": false
  },
  "tab_size": 2,
  "preview_tabs": {
    // Whether preview tabs should be enabled.
    // Preview tabs allow you to open files in preview mode, where they close automatically
    // when you switch to another file unless you explicitly pin them.
    // This is useful for quickly viewing files without cluttering your workspace.
    "enabled": true,
    // Whether to open tabs in preview mode when selected from the file finder.
    "enable_preview_from_file_finder": false,
    // Whether a preview tab gets replaced when code navigation is used to navigate away from the tab.
    "enable_preview_from_code_navigation": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 12,
    "copy_on_select": true,
    "line_height": "standard"
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "vim_mode": true,
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "languages": {
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JSX": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "problems": {
          "autoFixOnSave": true
        }
      }
    }
  }
}
