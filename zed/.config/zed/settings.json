{
  "theme": "Gruvbox Dark Soft",
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 13,
    "copy_on_select": true,
    "blinking": "on"
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        }
      }
    }
  }
}
